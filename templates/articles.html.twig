{%  extends 'base.html.twig' %}


{% block title %}
    <title>{{ "Les articles"}}</title>
{% endblock %}


{% block main %}
    {% for article in articles %}
        <article class="full-list">
                <h2>{{ article. title }}</h2>
                <p>{{ article. description }}</p>
                <p>{{ article. author }}</p>
                <img src="{{ article. image }}" alt="">

            <div class="moove-bouton">
                <a class="bouton" href="{{ path('article_seul', {'id':article.id}) }}">OUVRE TOI</a>
            </div>

        </article>
    {% endfor %}

{% endblock main %}






