{%  extends 'base.html.twig' %}


{% block title %}
    <title>{{ "Les articles"}}</title>
{% endblock %}


{% block main %}
    {% for article in articles %}
        {% if article.isPublished %}
            <article class="full-list">
                <img class="art-img" src="{{ asset('uploads/images/' ~ article.image) }}" alt="">
                {# Avec le if je vérifie si l'article a une catégorie, si c'est le cas, je peux l'afficher #}
                {% if article.category %}
                    <h2>{{ article.category.title }}</h2>
                    <p>{{ article. author }}</p>
                    {# Si ce n'est pas le cas, je demande à afficher la balise <p>   #}
                {% else %}
                    <p>Pas de catgéorie</p>
                {% endif %}
                <div class="moove-bouton">
                    <a class="bouton" href="{{ path('article', {'id':article.id}) }}">OUVRE TOI</a>


                </div>

            </article>
        {% endif %}
    {% endfor %}

{% endblock main %}