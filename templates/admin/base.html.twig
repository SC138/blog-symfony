
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

    {% block title %}
        <title>Blog La Piscine</title>
    {% endblock %}


    <link rel="stylesheet" href="{{ asset('assets/style.css') }}">




</head>
<body class="js-body">

<header class="header-top">
    <nav>
        <ul class="ul-articles">
            <li class="lien-articles"><a href="{{ path('admin_all-article')}}">Liste des articles</a></li>
            <li class="lien-articles"><a href="{{ path('admin_list_categories')}}">Liste des categories</a></li>
            <li class="lien-articles"><a href="{{ path('admin_insert_category')}}">Créer des categories</a></li>
            <li class="lien-articles"><a href="{{ path('admin_insert_article')}}">Créer des articles</a></li>

            <li class="lien-articles"><a href="{{ path('app_logout') }}">Logout</a></li>

            <button class="js-night">Mode Sombre</button>
        </ul>

        <div class="burger">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>


    </nav>
    <p>Bonjour {{ app.user.email }}</p>
</header>
{% for message in app.flashes('success') %}
    <p class="message-success">{{ message }}</p>
{% endfor %}

<main>

    {% block main %}
    {% endblock main %}

</main>

<footer>
    {% block footer %}
        <p>Les articles</p>
    {% endblock %}
</footer>

<script src="{{ asset('js/main.js') }}"></script>


</body>
</html>


